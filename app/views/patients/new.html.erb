<h1>Afiliado</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @patient do |f| %>
        <% if @patient.errors.any? %>
            <% @patient.errors.full_messages.each do |message| %>
                <div class="alert alert-danger">
                  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                  <strong>ERROR</strong> <%= message %>
                </div>
            <% end %>
        <% end %>

        <p><label for = "name">Nombre</label>:
        <%= f.text_field :name, class: 'form-control' %>

        <p><label for = "surname">Apellido</label>:
        <%= f.text_field :surname, class: 'form-control' %>

        <p><label for = "document_number">DNI</label>:
        <%= f.text_field :document_number, class: 'form-control' %>

        <p><label for = "associate_number">Obra Social/Num.</label>:
        <%= f.text_field :associate_number, class: 'form-control' %>

        <p><label for = "birth_date">Fecha de Nacimiento</label>:
        <%= f.date_select :birth_date, :start_year=>1930, order: [:day, :month, :year], class: 'form-control' %>

        <p><label for = "sex">Sexo</label>:
        <%= f.select :sex, ['Masculino', 'Femenino'], {},{class: 'form-control'}  %>

        <p><label for = "country_code">Nacionalidad</label>:
        <%= f.country_select :country_code %>

        <p><label for = "marital_status">Estado Civil</label>:
        <%= f.text_field :marital_status, class: 'form-control' %>

        <p><label for = "city">Ciudad</label>:
        <%= f.text_field :city, class: 'form-control' %>

        <p><label for = "phone">Telefono</label>:
        <%= f.text_field :phone, class: 'form-control' %>

        <p><label for = "close_person_phone">Tel. Allegado/Familiar</label>:
        <%= f.text_field :close_person_phone, class: 'form-control' %>

        <p><label for = "job">Ocupacion</label>:
        <%= f.text_field :job, class: 'form-control' %>

        <%= f.submit "Dar de alta paciente", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>