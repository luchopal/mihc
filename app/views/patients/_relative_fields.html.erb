<div class="row nested-fields">
  <div class="col-md-3">
    <%= f.label :bond, "Relación" %>
    <%= f.select :bond, Relative::BOND, {},{class: 'form-control'}  %>
  </div>
  <div class="col-md-3">
    <%= f.label :status, "Estado" %>
    <%= f.select :status, Relative::STATUS, {},{class: 'form-control'}  %>
  </div>
  <div class="col-md-4">
    <%= f.label :observation, "Observación" %>
    <%= f.text_field :observation,{class: 'form-control'}  %>
  </div>
  <div class="col-md-1">
    <%= link_to_remove_association "Eliminar", f , class: "btn btn-danger"%>
  </div>
</div>
