<h1>Pacientes</h1>


<div class="row">
  <%= form_tag(patients_path, method: :get) do %>
  <div class="col-md-8">
    <%= text_field_tag :term, params[:term], class: "form-control" %>
  </div>
  <div class="col-md-2">
    <%= submit_tag 'Buscar', name: nil, class: "btn btn-primary btn-block" %>
  </div>
  <% end %>
  <div class="col-md-2">
    <%=	 link_to "Limpiar", patients_path , method: :get, class: "btn btn-info btn-block"  %>
  </div>
</div>

<br>
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>DNI</th>
        <th>Obra Social/Num</th>
        <th>Sexo</th>
        <th>Estado</th>
        <th>Ciudad</th>
        <th>Telefono</th>
        <th>Tel. Familiar</th>
        <th>Ocupacion</th>
        <th>Accion</th>
      </tr>
      <% @patients.each do |data| %>
          <tr>
            <td><%= data.name %></td>
            <td><%= data.surname %></td>
            <td><%= data.document_number %></td>
            <td><%= data.associate_number %></td>
            <td><%= data.sex %></td>
            <td><%= data.marital_status %></td>
            <td><%= data.city %></td>
            <td><%= data.phone %></td>
            <td><%= data.close_person_phone %></td>
            <td><%= data.job %></td>
            <td><b> <%= link_to ('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>').html_safe, {:action => "edit", :id => data.id}%></b>
              <b> <%= link_to ('<span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>').html_safe, medical_consultations_path(data) , method: :get %></b>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
<%= will_paginate @patients %>

<p><%= link_to "Agregar nuevo paciente", {:action => 'new' }, class: "btn btn-primary"%></p>